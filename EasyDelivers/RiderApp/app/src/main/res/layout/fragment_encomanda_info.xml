<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.EncomandaInfoFragment">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="325dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".MapsActivity" />

    <TextView
        android:id="@+id/textviewEncomenda"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#fff"
        android:clickable="true"
        android:elevation="4dp"
        android:padding="20dp"
        android:text="Deliver:"
        app:layout_constraintTop_toBottomOf="@+id/map"
        tools:layout_editor_absoluteX="9dp" />

    <TextView
        android:id="@+id/textviewDistance"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#fff"
        android:clickable="true"
        android:elevation="4dp"
        android:padding="20dp"
        android:text="Distance:"
        app:layout_constraintTop_toBottomOf="@+id/textviewEarning"
        tools:layout_editor_absoluteX="5dp" />

    <TextView
        android:id="@+id/textviewStart_End"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#fff"
        android:clickable="true"
        android:elevation="4dp"
        android:padding="20dp"
        android:text="Start:    Destination:"
        app:layout_constraintTop_toBottomOf="@+id/textviewDistance"
        tools:layout_editor_absoluteX="-7dp" />

    <TextView
        android:id="@+id/textviewEarning"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#fff"
        android:clickable="true"
        android:elevation="4dp"
        android:padding="20dp"
        android:text="Earning:"
        app:layout_constraintTop_toBottomOf="@+id/textviewEncomenda"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/buttonStartEncomenda"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginBottom="55dp"
        android:text="Start Delivery"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>